<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yodalearning.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yodalearning.android.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yodalearning.android.StartingPoint"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.yodalearning.android.STARTINGPOINT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yodalearning.android.Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.yodalearning.android.MENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yodalearning.android.Settings"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.yodalearning.android.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yodalearning.android.About"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.yodalearning.android.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yodalearning.android.TextPlay"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.yodalearning.android.Wall"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
